{
  "name": "@betheweb/mockme",
  "version": "0.2.1",
  "description": "A mock service worker generator",
  "main": "src/sw/index.js",
  "type": "module",
  "module": "src/sw/index.js",
  "bin": {
    "mockme": "src/cli/index.js"
  },
  "exports": {
    ".": "./src/sw/index.js",
    "./ServiceWorkerManager.js": "./src/manager/ServiceWorkerManager.js"
  },
  "scripts": {
    "format": "run-s format:*",
    "format:eslint": "eslint --ext .js,.mjs,.cjs . --fix",
    "format:markdownlint": "markdownlint **/*.md --fix",
    "format:prettier": "prettier \"**/**/*.{js,mjs,json,md,mdx}\" --write",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .js,.mjs,.cjs .",
    "lint:markdownlint": "markdownlint **/*.md",
    "lint:prettier": "prettier \"**/*.{js,mjs,json,md,mdx}\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "publish": "changeset publish",
    "test": "run-s test:*",
    "test:node": "vitest --coverage",
    "prepare": "husky install"
  },
  "keywords": [
    "mockme",
    "mocks",
    "service worker"
  ],
  "author": "Jose Luis De Vega Andres <joseluis.devega@gmail.com>",
  "contributors": [
    "Manuel Martin Prieto <manuel.martin@gmail.com>"
  ],
  "license": "MIT",
  "files": [
    "src",
    "!**/test/*"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "cookie-muncher": "^0.4.2",
    "esbuild": "^0.19.3",
    "lodash-es": "^4.17.21",
    "path-to-regexp": "^6.2.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.15",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "@web/test-runner": "^0.17.2",
    "@web/test-runner-junit-reporter": "^0.6.2",
    "@web/test-runner-mocha": "^0.8.1",
    "@web/test-runner-playwright": "^0.10.2",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "markdownlint-cli": "^0.37.0",
    "memory-streams": "^0.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "vitest": "^0.34.4"
  }
}
